<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:layout_margin="0px"
    android:padding="0px"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
>  
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	> 
	
		<ImageView 
			android:src="@drawable/aiblogo" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:maxWidth="100dp" 
			android:adjustViewBounds="true" 
			android:scaleType="centerInside" 
			android:layout_marginTop="0dp" 
			android:layout_gravity="center"
		/>
      		
		<TextView 
			android:text="Please enter the following digits from your Personal Access Code (PAC):" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textStyle="bold" 
			android:textColor="#FFFFFFFF"
			android:layout_marginTop="10dp" 
			android:layout_gravity="center"
			android:gravity="center"
		/>
						
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
			android:gravity="center"
		>
		
			<TextView 
				android:id="@+id/dpac1"
				android:text="1" 
				android:textSize="20dp"
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent" 
				android:textStyle="bold" 
				android:textColor="#FFFFFFFF"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="5dp"				
			/>
		
			<EditText
				android:id="@+id/pac1"	
				android:layout_width="50sp" 
				android:layout_height="wrap_content" 
				android:layout_marginTop="10dp" 
				android:layout_gravity="center"
				android:gravity="center"
				android:inputType="number"
				android:password="true"
			/>			
			
			<TextView 
				android:id="@+id/dpac2"
				android:text="2" 
				android:textSize="20dp"
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent" 
				android:textStyle="bold" 
				android:textColor="#FFFFFFFF"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="5dp"
			/>
			
			<EditText
				android:id="@+id/pac2"	
				android:layout_width="50sp" 
				android:layout_height="wrap_content" 
				android:layout_marginTop="10dp" 
				android:layout_gravity="center"
				android:gravity="center"
				android:inputType="number"
				android:password="true"
			/>				
		
			<TextView 
				android:id="@+id/dpac3"	
				android:text="3" 
				android:textSize="20dp"
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent" 
				android:textStyle="bold" 
				android:textColor="#FFFFFFFF"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="5dp"
			/>
			
			<EditText
				android:id="@+id/pac3"	
				android:layout_width="50sp" 
				android:layout_height="wrap_content" 
				android:layout_marginTop="10dp" 
				android:layout_gravity="center"
				android:gravity="center"
				android:inputType="number"
				android:password="true"
			/>	
		
		</LinearLayout>	
		
		<TextView 
			android:id="@+id/challengePhrase"
			android:text="Please enter the last four digits from your home phone number" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textStyle="bold" 
			android:textColor="#FFFFFFFF"
			android:layout_marginTop="20dp" 
			android:layout_gravity="center"
			android:gravity="center"
		/>
		
		<EditText
			android:id="@+id/challengeNumber"	
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="10dp" 
			android:maxWidth="120dp" 	
			android:width="120dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:inputType="number"
			android:password="true"
		/>
		
		<Button 
			android:id="@+id/loginButton" 
			android:text="Next" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="10dp" 
			android:maxWidth="180dp" 	
			android:width="180dp"
			android:onClick="onClick"
			android:layout_gravity="center"
		/>
	  	
	</LinearLayout>

</LinearLayout>